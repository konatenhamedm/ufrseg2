{% extends 'security/layout.html.twig' %}

{% block title %}Création de compte!{% endblock %}

{% block body %}



{{ form_start(form, {attr: {'class': 'form w-100'}, id: "kt_sign_in_form"}) }}
	<div class="text-center mb-11">
        <a href="" class="mb-0 mb-lg-12">
            <img alt="Logo" src="{{ asset('assets/media/logos/logo.png') }}" class="h-60px h-lg-75px" />
        </a>
									<!--begin::Title-->
		<h1 class="text-dark fw-bolder mb-3">Création de compte</h1>
		<div class="text-gray-500 fw-semibold fs-6">UFR SEG</div>
			
			
									<!--end::Subtitle=-->
		</div>
		<!--begin::Heading-->
		<!--begin::Login options-->
		<div class="row g-3 mb-0">
			<!--begin::Col-->
			
			<!--end::Col-->
		</div>
	<!--end::Login options-->
	<!--begin::Separator-->
	
	<!--end::Separator-->
	<!--begin::Input group=-->
	{{ include('_includes/ajax/response.html.twig') }}
	<div class="row">
	<div class="col-md-6">
	<div class="fv-row mb-3">
		{{ form_row(form.username, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
	</div>
	</div>
	<div class="col-md-6">
	<div class="fv-row mb-3">
		{{ form_row(form.email, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
	</div>
	</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.plainPassword.first, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.plainPassword.second, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>
		<div class="fv-row mb-3">
				{{ form_row(form.niveau, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
	<div class="row">
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.genre, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.civilite, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>
	<div class="row mb-3">
	<div class="col-md-6">
	<div class="fv-row mb-3">
				{{ form_row(form.nom, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		
	</div>
	<div class="col-md-6">
	<div class="fv-row mb-3">
				{{ form_row(form.prenom, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		
	</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="fv-row mb-3">
				{{ form_row(form.dateNaissance, {attr: {class: 'form-control form-control-sm bg-transparent no-auto'}}) }}
			</div>
		</div>
		<div class="col-md-8">
			<div class="fv-row mb-3">
				{{ form_row(form.contact, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>
	
	<!--end::Wrapper-->
	<!--begin::Submit button-->
	<div class="d-grid mb-10">
		<button type="submit" class="btn btn-main btn-ajax">
			<span class="spinner-border d-none  spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span>
			Valider
			<!--end::Indicator progress-->
		</button>
	</div>
	<div class="text-gray-500 text-center fw-semibold fs-6">
		Vous avez un compte?

		<a href="{{ path("app_login") }}" class="link-primary">
			Connecter vous ici
		</a>
	</div>
	

	<!--end::Sign up-->
{{ form_end(form)}}
{% endblock %}